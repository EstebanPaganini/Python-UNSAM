#EJERCICIO 4.7
def maximo(lista):
    m = 0
    for e in lista:
        m = max(lista)
    return m
'''print(maximo([-5,-4]))'''#NO ME TIRA 0 COMO EN LOS EJEMPLOS DE
#LOS EJERCICIOS, ME DA BIEN EL RESULTADO DE LA FUNCION.
def minimo(lista):
    m = 0
    for e in lista:
        m = min(lista)
    return m
'''print(minimo([-80,-4]))'''
